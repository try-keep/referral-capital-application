{
  "name": "referral-capital-application",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3009",
    "build": "next build",
    "start": "next start --port 3009",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint-staged": "lint-staged",
    "dev:backend": "cd backend && npm run dev",
    "start:backend": "cd backend && npm start",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev\"",
    "install:backend": "cd backend && npm install",
    "test:compliance": "node test-compliance.js",
    "test:compliance:prod": "TEST_URL=https://referral-capital-application-1gv42zxj3-try-keep.vercel.app node test-compliance.js",
    "supabase:start": "npx supabase start",
    "pr": "open https://github.com/try-keep/referral-capital-application/compare/main...$(git rev-parse --abbrev-ref HEAD)?expand=1",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@segment/analytics-next": "^1.81.0",
    "@supabase/supabase-js": "^2.50.0",
    "autoprefixer": "^10.4.21",
    "bufferutil": "^4.0.8",
    "dotenv": "^16.5.0",
    "logrocket": "^10.1.0",
    "lucide-react": "^0.525.0",
    "next": "^13.5.11",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "utf-8-validate": "^6.0.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "lint-staged": "^16.1.2",
    "prettier": "^3.4.2",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint-staged"
  },
  "lint-staged": {
    "*.{json,md,html,js,jsx,d.ts,ts,tsx,graphql}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
